set $upstream_frontend http://frontend:3000;
set $upstream_backend http://keycloak:5000;
set $upstream_keycloak http://keycloak:8080;
resolver 127.0.0.11 valid=30s;

location / {
    # root   html;
    # root   /usr/share/nginx/html;
    # index  index.html index.htm;

    include conf.d/proxy_params;
    proxy_pass $upstream_frontend;
}


location /api {

    location /api/auth {
        proxy_pass $upstream_frontend;
    }

    proxy_pass $upstream_backend;

    include conf.d/proxy_params;
}


location /auth {

    location /auth/realms {
        proxy_pass $upstream_keycloak/auth/realms;
    }

    location /auth/resources {
        proxy_pass $upstream_keycloak/auth/resources;
    }

    location /auth/robots.txt {
        proxy_pass $upstream_keycloak/auth/robots.txt;
    }

    include conf.d/proxy_params;
}