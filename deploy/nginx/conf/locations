set $upstream_frontend http://frontend:3000;
set $upstream_backend http://host.docker.internal:5012;
set $upstream_keycloak http://keycloak:8080;

resolver 127.0.0.11 valid=30s;

location / {
    # root   html;
    # root   /usr/share/nginx/html;
    # index  index.html index.htm;

    include conf.d/proxy_params;

    proxy_pass $upstream_frontend;
}


location /api {

    include conf.d/proxy_params;

    location /api/auth {
        proxy_pass $upstream_frontend;
    }

    proxy_pass $upstream_backend;
}


location /auth {

    include conf.d/proxy_params;

    location /auth/realms {
        proxy_pass $upstream_keycloak;
    }

    location /auth/resources {
        proxy_pass $upstream_keycloak;
    }

    location /auth/robots.txt {
        proxy_pass $upstream_keycloak;
    }
}